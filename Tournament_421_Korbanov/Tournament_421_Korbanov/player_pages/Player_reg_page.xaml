<Page x:Class="Tournament_421_Korbanov.player_pages.Player_reg_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_421_Korbanov.player_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Player_reg_page">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="16" HorizontalAlignment="Center">Авторизация</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox Width="260" Height="30" x:Name="LoginTb" Margin="0,5,0,0"></TextBox>
            <TextBlock Margin="0,5,0,0">Пароль</TextBlock>
            <PasswordBox Width="260" Height="30"  x:Name="PassTb"
                     Margin="0,5,0,0"></PasswordBox>

            <Button Click="Button_Click" Margin="0,10,0,0">Вход</Button>
            <Button Click="Button_Click_1" Margin="0,10,0,0" >Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
